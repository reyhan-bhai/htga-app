# VAPID key for Firebase Cloud Messaging (Web Push)
NEXT_PUBLIC_FIREBASE_VAPID_KEY="your-vapid-key"

# Firebase Admin SDK (server-side only — NEVER expose to client)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_DATABASE_URL="https://your-project-id-default-rtdb.asia-southeast1.firebasedatabase.app"

# Gmail SMTP Settings (used by Nodemailer for sending emails)
GMAIL_FROM="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"
ADMIN_NOTIFICATION_EMAIL="admin-email@example.com"

# Admin FCM Token (for testing push notifications)
NEXT_PUBLIC_ADMIN_TOKEN="your-admin-fcm-token"

# DocuSign eSignature API
